<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
	<mapper namespace="com.itwillbs.mapper.ReleaseMapper">
	
	<select id="getReleaseList" resultType="ReleaseVO">
		select * from tbl_release
	</select>
	
	<select id="getReleaseInfoList" resultType="ReleaseVO">
		select * from tbl_release
		where divcode=#{divcode}
	</select>
	
	<update id="upReleaseModify">
		update tbl_release set release_date=#{release_date}, order_count=#{order_count}
		where divcode=#{divcode}
	</update>
	
	<update id="upCheckRelease">
		update tbl_release set pname=#{pname},pno=#{pno},order_count=order_count-#{order_count}
		where divcode=#{divcode}
	</update>
	
	</mapper>