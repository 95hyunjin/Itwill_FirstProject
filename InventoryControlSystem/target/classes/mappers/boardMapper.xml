<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwillbs.mapper.BoardMapper">

	<select id="checkId" resultType="int">
		SELECT COUNT(*) FROM member 
		WHERE id = #{id}
	
	</select>
	

	<insert id="insertMember">
		insert into member (id, pass, name, email,phone, salt, position) 
		value (#{id}, #{pass}, #{name}, #{email}, #{phone}, #{salt},'사원')
	
	</insert>

	<insert id="insertKakaoMember">
		insert into member (
						   id
						   ,pass
						   ,name
						   ,email
						   ,phone
						   ,salt
						   ,position
						   ,sns_email
						   ,regdate
						   )
		value (#{id}, #{pass}, #{name}, #{email}, #{phone}, #{salt},'사원', #{sns_email},now() )
	
	</insert>
	
	<select id="getSalt" resultType="string">
		select salt from member 
		where id = #{id}
	
	</select>
	
	<select id="getMember" resultType="com.itwillbs.domain.MemberVO">
		select * from member 
		where id = #{id}
	
	</select>
	

</mapper>