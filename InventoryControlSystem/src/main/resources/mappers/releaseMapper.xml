<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
	<mapper namespace="com.itwillbs.mapper.ReleaseMapper">
	
	<select id="getReleaseList" resultType="ReleaseVO">
		select * from tbl_release
	</select>
	
	<select id="getReleaseInfoList" resultType="ReleaseVO">
		select * from tbl_release
		where pno=#{pno}
	</select>
	
	<update id="upReleaseModify" parameterType="ReleaseVO">
		update tbl_release set order_count=#{order_count}
		where pno=#{pno}
	</update>
	
	<update id="upCheckRelease">
		update tbl_release set pname=#{pname},pno=#{pno},order_count=order_count-#{order_count}
		where pno=#{pno}
	</update>
	
	<delete id="deRelease">
		delete from tbl_release
		where pno=#{pno}
	</delete>
	
	</mapper>